<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signUpFragment">

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.taskscheduler.SignUpFragment"
        android:label="SignUpFragment" >
        <action
            android:id="@+id/action_signUpFragment_to_displayTasksFragment"
            app:destination="@id/displayTasksFragment" />
    </fragment>
    <fragment
        android:id="@+id/displayTasksFragment"
        android:name="com.example.taskscheduler.DisplayTasksFragment"
        android:label="DisplayTasksFragment" >
        <action
            android:id="@+id/action_displayTasksFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
</navigation>